        <com.cootek.smartinput5.func.resource.p055ui.TTextView android:textSize="@dimen/login_view_btn_text_size" android:textColor="#ffffff" android:gravity="center" android:id="@+id/reset_password_done_btn" android:background="@drawable/login_view_btn_ctrl" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/back"/>
    </LinearLayout>
</LinearLayout>
