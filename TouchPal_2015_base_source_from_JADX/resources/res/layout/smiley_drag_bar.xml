<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res/com.cootek.smartinput" android:layout_width="match_parent" android:layout_height="@dimen/smiley_drag_bar_height">
    <View android:id="@+id/drag_keyboard_mask" android:background="@drawable/smiley_drag_bottom_mask" android:layout_width="match_parent" android:layout_height="@dimen/smiley_drag_bar_mask_height" android:layout_alignParentTop="true"/>
    <View android:id="@+id/drag_bottom_shadow" android:background="@drawable/smiley_drag_bottom_shadow" android:layout_width="match_parent" android:layout_height="@dimen/smiley_drag_bar_bottom_shadow_height" android:layout_below="@+id/drag_keyboard_mask"/>
    <View android:id="@+id/drag_bottom_area" android:background="@color/smiley_drag_bar_bottom_area_color" android:layout_width="match_parent" android:layout_height="@dimen/smiley_drag_bar_bottom_height" android:layout_below="@+id/drag_keyboard_mask"/>
    <ImageView android:id="@+id/drag_knob" android:background="@drawable/smiley_drag" android:layout_width="wrap_content" android:layout_height="@dimen/smiley_drag_bar_knob_height" android:scaleType="fitCenter" android:layout_below="@+id/drag_keyboard_mask" android:layout_centerHorizontal="true"/>
</RelativeLayout>
