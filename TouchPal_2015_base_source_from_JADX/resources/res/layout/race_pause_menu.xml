<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res/com.cootek.smartinput" android:background="#00000000" android:layout_width="match_parent" android:layout_height="wrap_content" android:isScrollContainer="true">
    <LinearLayout android:orientation="vertical" android:background="@drawable/race_menu_bg" android:paddingBottom="0dp" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal" android:paddingTop="20dp" android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_weight="1"/>
            <com.cootek.smartinput5.func.resource.p055ui.TButton android:textColor="@color/race_submit_text_color" android:id="@+id/buttonRetry" android:background="#00000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/race_retry" android:drawableTop="@drawable/race_retry_btn_icon"/>
            <LinearLayout android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_weight="2"/>
            <com.cootek.smartinput5.func.resource.p055ui.TButton android:textColor="@color/race_submit_text_color" android:id="@+id/buttonExit" android:background="#00000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/race_exit" android:drawableTop="@drawable/race_exit_btn_icon"/>
            <LinearLayout android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_weight="1"/>
        </LinearLayout>
        <ImageView android:layout_gravity="center_horizontal" android:id="@+id/buttonClose" android:background="@drawable/race_close" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
