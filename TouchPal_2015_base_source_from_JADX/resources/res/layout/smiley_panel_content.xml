<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res/com.cootek.smartinput" android:layout_width="match_parent" android:layout_height="match_parent">
    <ListView android:id="@+id/smiley_list_frame" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentTop="true"/>
    <include android:id="@+id/emoji_download_panel" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/smiley_list_frame" layout="@layout/emoji_download_content"/>
    <LinearLayout android:orientation="horizontal" android:id="@+id/emoji_art_list" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentTop="true">
        <ListView android:gravity="center" android:id="@+id/emoji_art_grid" android:layout_width="match_parent" android:layout_height="match_parent"/>
    </LinearLayout>
    <View android:id="@+id/virtual_drag_zone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignTop="@+id/smiley_list_frame" android:layout_centerHorizontal="true"/>
    <LinearLayout android:orientation="horizontal" android:id="@+id/category_list" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true"/>
</RelativeLayout>
