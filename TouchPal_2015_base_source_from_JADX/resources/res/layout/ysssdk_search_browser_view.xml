<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res/com.cootek.smartinput" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <WebView android:id="@+id/search_browser_webview" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginBottom="@dimen/yssdk_preview_footer_height" android:layout_below="@+id/header_view"/>
    <ProgressBar android:id="@+id/web_progress_spinner" android:paddingBottom="@dimen/yssdk_preview_footer_height" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true" style="?android:attr/progressBarStyleLarge"/>
    <RelativeLayout android:layout_gravity="bottom" android:orientation="horizontal" android:id="@+id/footer_view" android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="@dimen/yssdk_preview_footer_height" android:layout_above="@+id/search_browser_webview" android:layout_alignParentBottom="true">
        <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="@dimen/padding_size_1">
