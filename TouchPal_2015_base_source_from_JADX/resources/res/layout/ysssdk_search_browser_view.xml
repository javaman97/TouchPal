            <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="@color/white" android:layout_gravity="center" android:id="@+id/tv_send_icon" android:background="@color/share_blue" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/yssdk_share_send_margin" android:text="@string/yssdk_share_send_icon"/>
        </FrameLayout>
    </RelativeLayout>
</RelativeLayout>
