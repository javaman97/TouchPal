                <ImageView android:id="@+id/explicit_clouding_icon" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>
        <FrameLayout android:id="@+id/explicit_more_cloud_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
            <ImageView android:background="@drawable/explicit_cloud_more_line" android:layout_width="match_parent" android:layout_height="match_parent"/>
            <ImageView android:id="@+id/explicit_more_cloud_icon" android:layout_width="match_parent" android:layout_height="match_parent"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
